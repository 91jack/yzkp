/**app.wxss**/
page {
  background-color: #F6f6f6;
  height: 100%;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.cell {
  width: 100%;
  clear: both;
}
.cell:after {
  contain: '';
  clear:both;

}

/* 顶部输入框 */
.top{
  height: 158rpx;
  background: #3830EB;
  display: flex;
  box-sizing: border-box;
  padding-top: 47rpx;
  justify-content: space-around
}
/* .serach .loc{
  width: 
} */
.top .loc image{
  width: 28rpx;
  height: 34rpx;
}

/*输入框 */
.serach{
  height: 78rpx;
  width: 566rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  line-height: 78rpx;
  justify-content: space-around
}

.serach .inp{
  width: 100%;
  position: relative;
}
.serach .inp image{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 47rpx;
  top: 50%;
  margin-top: -16rpx
}
.serach .inp .clear{
  width: 35rpx;
  height: 35rpx;
  right: 106rpx;
  margin-top: -17rpx;
}
.serach view input{
  display: block;
  font-size: 28rpx;
  line-height: 78rpx;
  text-align: left;
  height: 78rpx;
  width: 100%;
  box-sizing: border-box;
  padding-left: 87rpx;
}

/* 能力提升部分 */
.ability-cont .ability-cont-item{
  height: 260rpx;
  display: flex;
  border-bottom: 1rpx solid #F6F6F6
}
.ability-cont .ability-cont-item image{
  display: inline-block;
  width: 173rpx;
  height: 165rpx;
  background: red;
  margin: 37rpx 33rpx 0 27rpx;
}
.ability-cont .ability-cont-item view{
  display: inline-block
}
.ability-cont .ability-cont-item view text{
  display: block;
  font-size: 24rpx;
  color: #868686;
  margin-bottom: 15rpx;
  height: 24rpx;
  line-height: 24rpx;
}
.ability-cont .ability-cont-item view .ability-cont-item-tit{
  font-size: 28rpx;
  color: #353535;
  margin-bottom: 21rpx;
  margin-top: 31rpx;
  height: 28rpx;
  line-height: 28rpx;
}
.ability-cont .ability-cont-item view .ability-cont-item-price{
  color: #F39800;
  font-size: 26rpx;
  margin-bottom: 11rpx;
  height: 26rp;
  line-height: 26rpx;
}
/* 公司详情 */
.company-intro{
  background: #fff;
  padding-left: 26rpx;
}
.company-intro .company-name{
  display: flex;
  align-items: flex-end;
  height: 77rpx;
  line-height: 77rpx;
  padding-bottom: 24rpx;
  box-sizing: border-box
}
.company-intro .company-name image{
  width: 34rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle
}
.company-intro .company-name text{
  color: #353535;
  font-size: 28rpx;
  display: inline-block;
  height: 28rpx;
  line-height: 28rpx;
  vertical-align: middle;
  margin-left: 5rpx;
}
.company-intro .intro-cont{
  width: 703rpx;
  margin-left: 1rpx;
  border-top: 1rpx solid #E8E8E8
}
.company-intro .intro-cont text{
  font-size: 26rpx;
  color: #868686;
  display: block;
  padding-top: 27rpx;
  height: 540rpx;
  overflow: auto
}

/* 底部按钮 */
.btn{
  width: 100%;
  height: 117rpx;
  background: #F39800;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 117rpx;
  position: fixed;
  bottom: 0;
  left: 0
}
.blue-btn{
  width: 100%;
  height: 117rpx;
  background:linear-gradient(to right,rgba(105,100,253,1),rgba(56,48,235,1));
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}
.blue-btn image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 17rpx;
  display: inline-block;
  margin-top: 42rpx;
  margin-left: 252rpx;
}
.blue-btn text{
  display: inline-block;
  font-size: 30rpx;
  color: #fff;
  height: 117rpx;
  line-height: 117rpx;
}


/* from表单输入框、picker */
.box{
  height: 104rpx;
  border-bottom: 1rpx solid #E8E8E8;
  display: flex;
  justify-content: space-between;
  padding: 0 22rpx 0 27rpx;
}
.box picker{
  width: 400rpx;
  text-align: right
}
.box>text{
  line-height: 104rpx;
  font-size: 28rpx;
  color: #868686;  
}
.box>input{
  text-align: right;
  font-size: 28rpx;
  line-height: 40rpx;
  display: inline-block;
  height: 104rpx;
  width: 500rpx;
}
.box .right{
  display: inline-block;
  height: 100%;
  line-height: 104rpx;
}
.box .right>text,
.box .right>image{
  display: inline-block;
  vertical-align: middle;  
}
.box .right>text{
  color: #868686;
  font-size: 24rpx;
}
.box .right>text.active{
  color: #F39800
}
.box .right>image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}
.box .right .next{
  width: 13rpx;
  height: 24rpx;
  margin-left: 24rpx;
}
.box .right .choose{
  font-size: 28rpx;
  color: #868686
}
.box .oncheck{
  margin-left: 39rpx;
}
/* 灵活用工、劳务派遣、招聘外包 */
.public-tit{
  margin-top: 19rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #353535;
  text-align: center
}
.public-cont{
  width: 631rpx;
  height: 706rpx;
  border:16rpx solid #fff;
  border-radius: 10rpx;
  box-shadow:0px 20rpx 16rpx rgba(0,0,0,0.05);
  margin: auto;
  padding: 27rpx 30rpx 0 25rpx;
}
.public-cont .cont-item{
  margin-bottom: 33rpx;
}
.public-cont .cont-item text{
  font-size: 28rpx;
  color: #6B6B6B;
  line-height: 45rpx;
}
.public-cont .cont-item .cont-item-name{
  color: #353535;
  font-weight: bold;
}
/* 工资条 */
.payment-tit{
  height: 105rpx;
  position: relative;
}
.payment-tit image{
  position: absolute;
  width: 9rpx;
  height: 29rpx;
  background: #F39800;
  left: 27rpx;
  top: 50%;
  margin-top: -15rpx;
}
.payment-tit text{
  color: #353535;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 105rpx;
  margin-left: 44rpx;
}
/* 奖励详情 */
.price-cont{
  width: 700rpx;
  border:1rpx solid #FFCC78;
  margin: auto;  
}
.price-cont .price-item{
  display: flex;
}
.price-cont .price-item .price-item-tit{
  width:264rpx;
  border-bottom: 1rpx solid #E8E8E8;
  border-right: 1rpx solid #E8E8E8;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  line-height: 90rpx;
  height:90rpx;
}
.price-cont .price-item .price-item-tit:last-of-type,
.price-cont .price-item .price-basic-tit:last-of-type{
  width: 437rpx;
}
.price-cont .price-item .price-basic-tit{
  font-size: 26rpx;
  color: #6B6B6B;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  width: 264rpx;
  border-bottom: 1rpx solid #E8E8E8;
  border-right: 1rpx solid #E8E8E8;
}
.connect{
  display: block;
  font-size: 24rpx;
  margin-left: 27rpx;
  color: #6B6B6B;
  margin-top: 29rpx;
}