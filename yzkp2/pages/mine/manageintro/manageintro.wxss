page{
  background: #fff
}
.header{
  height: 192rpx;
  background: #fff;
  border-bottom: 16rpx solid #F6F6F6;
}
.header .header-cont{
    display: flex;
    position: relative
}
.header .company-pic{
  width: 113rpx;
  height: 113rpx;
  background: red;
  margin-left: 29rpx;
  margin-top: 40rpx;
  border-radius: 50%
}
.header-intro {
  margin-left: 33rpx;
}
.header-intro>text{
  display: block;
}
.header-intro .name{
  font-size: 32rpx;
  color: #353535;
  margin-top: 54rpx;
  margin-bottom: 25rpx;
}
.header-intro .intro-cont{
  height: 26rpx;
  line-height: 26rpx;
}
.header-intro .intro{
  font-size: 26rpx;
  color: #868686;
  line-height: 26rpx;  
  display: inline-block;  
}
.header-intro .intro.detail{
  width: 379rpx;
  height: 26rpx;
  overflow:hidden; 
  text-overflow:ellipsis; 
  white-space:nowrap;
}
.tonext{
  width: 18rpx;
  height: 32rpx;
  position: absolute;
  top: 50%;
  margin-top: -16rpx;
  right:24rpx;
}

/* 导航栏 */
.nav-bar{
  width: 100%;
  height: 75rpx;
  display: flex;
}
.nav-bar .nav-bar-item{
  width: 187rpx;
  height: 75rpx;
  border-right:1rpx solid #E8E8E8;
  background: #fff;
  color: #868686;
  font-size: 28rpx;
  text-align: center;
  line-height: 75rpx;
}
.nav-bar .nav-bar-item:last-of-type{
  border-right: none
}
.nav-bar .nav-bar-item.active{
  background: #F39800;
  color: #fff
}
/*              nav-cont内容区 */
/* 简历编辑 */
.edit{
  width: 702rpx;
  border-radius: 10rpx;
  background:  rgba(56,48,235,0.05);
  margin: auto;
}
.edit .boxcont{
  width: 702rpx;
  box-sizing: border-box;
  padding: 0 26rpx 38rpx 25rpx;
  border-bottom: 12rpx solid #fff;
}
.boxcont .nav-cont-tit{
  display: flex;
  height: 70rpx;
  border-bottom: 1px solid #868686;
  justify-content: space-between
}
.boxcont .nav-cont-tit .left image{
  width: 29rpx;
  height: 26rpx;
  margin-right: 8rpx;
}
.boxcont .nav-cont-tit .left text{
  font-size: 24rpx;
  color: #353535;
  line-height: 70rpx;
  vertical-align: middle
}
.boxcont .nav-cont-tit .right image{
  width: 20rpx;
  height: 22rpx;
  margin-right: 7rpx;
}
.boxcont .nav-cont-tit .right text{
  font-size: 22rpx;
  color: #F39800;
  line-height: 70rpx;  
  vertical-align: middle  
}

.nav-cont-basicmsgdetail>text{
  display: block
}
.nav-cont-basicmsgdetail{
  color: #353535;
  font-size: 28rpx;
  margin-top: 26rpx;
}
.basicmsgdetail-name{
  font-size: 28rpx;
  color: #353535;
  height: 28rpx;
  line-height: 28rpx;
}
.basicmsgdetail-info{
  color: #868686;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin: 17rpx 0 24rpx; 
}
.basicmsgdetail-item{
  margin-bottom: 20rpx;
}
.basicmsgdetail-item:last-of-type{
  margin-bottom: 0
}
.basicmsgdetail-item image{
  width: 25rpx;
  height: 25rpx;
}
.basicmsgdetail-item text{
  font-size: 24rpx;
  color: #868686
}
.nav-content .nav-content-item{
  height: 159rpx;
  border-bottom: 1rpx solid #E5E5E5;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.nav-content .nav-content-item:last-of-type{
  border-bottom: none
}
.nav-content .nav-content-item image{
  width: 22rpx;
  height: 22rpx;
  display: inline-block;
  margin-right: 10rpx;
  vertical-align: top
}
.nav-content .nav-content-item .nav-content-item-detail{
  display: inline-block
}
.nav-content .nav-content-item .nav-content-item-detail text{
  display: block
}