page{
  background: #E8E8E8;
  height: 100%;
  overflow: hidden
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
/*------------------导航栏  */
.nav{
  height: 92rpx;
  width: 100%;
  display: flex;
  background: #fff;
  margin-bottom: 11rpx;
}
.nav .nav-bar{
  width: 50%;
  text-align: center;
  line-height: 92rpx;
  position: relative;
  font-size: 30rpx;
  color: #353535
}
.nav .nav-bar.active{
  color: #F39800;
}
.nav .nav-bar.active::after{
  position: absolute;
  content: '';
  bottom: 1rpx;
  left: 50%;
  width: 129rpx;
  height: 3rpx;
  margin-left: -65rpx;
  background: #F39800;
}
.nav .nav-bar:first-child{
  width: 375rpx;
  border-right: 1rpx solid #E8E8E8
}
/*-----------------------------公司简介  */
.company{
  /* padding-left: 25rpx;  */
  background: #fff;
  padding-bottom: 16rpx; 
  height: 100%
}
.company>view{
  background: #E8E8E8;
  /* margin-left: 25rpx; */
}
.company .info{
  position: relative;
  padding-bottom: 11rpx;
  background: #fff;
  padding-left: 25rpx;
}
.company .info>image{
  position: absolute;
  top: 31rpx;
  right: 22rpx;
  width: 111rpx;
  height: 111rpx;
  background: red
}
.company .info text{
  display: block
}
.company .info .simple-name{
  color: #353535;
  font-size: 32rpx;
  padding-top: 30rpx;
}
.company .info .total-name{
  color: #868686;
  font-size: 22rpx;
  margin-top: 10rpx;
}
.company .info .cont{
  margin-top: 28rpx;
  font-size: 26rpx;
  color: #868686
}
.company .info .type,
.company .info .industry{
  margin-top: 21rpx;
  color: #868686;
  font-size: 26rpx;
}
.welfare{
  padding-top: 17rpx;
  display: flex;
  background: #fff;
  margin-bottom: 11rpx;
  padding-left: 25rpx;  
}
.welfare .welfare-tit{
  color: #868686;
  font-size: 26rpx;
  display: inline-block;
}
.welfare .welfare-detail{
  margin-left: 22rpx;
  display: flex;
  flex-wrap: wrap;
  width: 640rpx;
}
.welfare .welfare-detail .welfare-item{
  width: 136rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: #EAE9FC;
  font-size: 20rpx;
  color: #868686;
  line-height: 40rpx;
  margin-right: 21rpx;
  text-align: center;
  margin-bottom: 14rpx;
}

