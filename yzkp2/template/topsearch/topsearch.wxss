/* template/topsearch/topsearch.wxss */
/* 顶部输入框 */
.top{
  height: 158rpx;
  background: #3830EB;
  box-sizing: border-box;
  padding: 47rpx 22rpx 0;
  justify-content: space-around;
  display: flex;
  align-items: center
  
}
/*输入框 */
.serach{
  height: 78rpx;
  /* width: 706rpx; */
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  line-height: 78rpx;
  justify-content: space-around;
  margin: auto;
  flex:1
}

.serach .inp{
  width: 100%;
  position: relative;
}
.serach .inp image{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  z-index: 999;
  right: 47rpx;
  top: 50%;
  margin-top: -16rpx
}
.serach .inp .clear{
  width: 35rpx;
  height: 35rpx;
  right: 106rpx;
  margin-top: -17rpx;
}
.serach view input{
  display: block;
  font-size: 28rpx;
  line-height: 78rpx;
  text-align: left;
  height: 78rpx;
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.find-people{
  display: flex;
  justify-content: cenert;
  align-items: center;
  flex-direction: column;
  margin-left: 40rpx;
}
.find-people text{
  color: #fff;
  font-size: 20rpx;
}
.find-people image{
  width: 40rpx;
  height: 48rpx;
}