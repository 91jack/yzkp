/* template/jobinfo/jobinfo.wxss */

/*顶部区域  */
.tit{
  /* height: 374rpx; */
  width: 100%;
  background: #fff; 
  padding: 28rpx 22rpx 0 26rpx;
  box-sizing: border-box;
  margin-bottom: 11rpx;
}
.tit-name{
  width: 100%;
  margin-bottom: 38rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end
}
.work-name{
  font-size: 32rpx;
  color: #353535;
  font-weight: bold
}
.work-price{
  font-size: 28rpx;
  color: #F39800
}

.tit-request{
  display: flex;
  align-items: flex-end;
  flex-wrap: wrap;
}
.tit-request .request-item{
  display: flex;
  align-items: flex-end;
  margin-right: 25rpx;
  margin-bottom: 5rpx;
}
.tit-request .request-item image{
  display: block;
  margin-bottom: 26rpx;
  width: 30rpx;
  height: 28rpx;
}
.tit-request .request-item text{
  font-size: 24rpx;
  margin-left: 8rpx;
  color: #353535;
  display: block;  
  line-height: 24rpx;
  height: 24rpx;
  margin-bottom: 26rpx;
}

.tit-treatment text{
  display: inline-block;
  font-size: 24rpx;
  color: #868686;
  margin-bottom: 24rpx;
}

.tit-adreess{
  height: 105rpx;
  border-top: 1rpx solid #E8E8E8;
}
.tit-adreess navigator{
  width: 100%;
  height: 100%;
  line-height: 106rpx;
}
.tit-adreess image{
  display: inline-block; 
  width: 32rpx;
  height: 40rpx;
  vertical-align: middle
}
.tit-adreess text{
  color: #868686;
  font-size: 22rpx;
  margin-left: 10rpx;  
}