/* page/common/industry/industry.wxss */
.industry {
  background: #fff;
  width:100%;
  height:100%;
  overflow: hidden;
  position:absolute;
  top:0;
  left:0;
}
.industry left {
  width:50%;
  position: absolute;
  top:0;
  left:0;
}
.industry .right {
  width:50%;
  height:100%;
  margin: 20rpx 0;
  /* overflow-y:auto; */
  position: absolute;
  right:10rpx;
  top:0;
}
.industry-level1 {
  text-align: center;
  width:50%;
  height:91rpx;
  line-height: 91rpx;
  background: #F6F6F6;
  color:#868686;
  border-bottom: 1rpx solid #fff;
}
.industry-level2 {
  max-height:45%;
  margin-bottom: 20rpx;
  overflow-y: auto;
 
} 
.industry-level3 {
   max-height:45%;
   overflow-y: auto;
   margin: 20rpx auto;
  border-top: 2rpx solid #F6F6F6;
}

.industrybtn{
  /* width:140rpx;
  height:60rpx; */
  padding: 5rpx 20rpx;
  margin: 10rpx 15rpx;
  float:left;
  border-radius: 10rpx;
  background: #fefaf2;
  text-align: center;
  line-height: 60rpx;
}

.active {
  background: #F39800;
  color:#fff;
}