<!--page/my/resume/jobintensionedit/jobintensionedit.wxml-->

<view class='box'>
  <text>期望行业</text>
  <view class='right'>
    <text class='choose'>请选择</text>        
    <image class='next' src='/image/mine/next.png'></image>
  </view>
</view>
<view class='box'>
  <text>期望职位</text>
  <input placeholder='请输入期望职位' placeholder-style="color:#D7D7D7"></input>
</view>
<view class='box'>
  <text>期待薪资</text>
  <view class='right'>
     <picker mode="selector" range="{{monthPayArr}}" value="{{monthPayIndex}}" bindchange="bindPicker">
        <text hidden='{{monthPayHide}}' class='choose'>请选择</text>        
        <text class='choose'>{{monthPayArr[monthPayIndex].name}}</text>
        <image class='next' src='/image/mine/next.png'></image>
     </picker>
  </view>
</view>
<view class='box'>
  <text>期望工作地址</text>
  <view class='right'>
    <text class='choose'>请选择</text>        
    <image class='next' src='/image/mine/next.png'></image>
  </view>
</view>
<view class='btn'>保存编辑</view>
