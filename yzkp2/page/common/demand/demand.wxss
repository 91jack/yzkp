/* page/common/demand/demand.wxss */
/* 要求 */
page{
  background: #fff;
}
.demand{
  margin-bottom: 120rpx;
}
.bar-request{
  width: 100%;
  background: #fff;
  padding: 30rpx 25rpx 0;
}
.bar-request-tit{
  font-size: 30rpx;
  color: #868686;
  margin-bottom: 20rpx;
}
.bar-request-detail{
  display: flex;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}
.bar-request-detail .detail-box{
  height: 60rpx;
  font-size: 30rpx;
  color: #353535;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
  text-align: center;
  line-height: 60rpx;
  margin-right: 22rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
  padding: 0 28rpx;
}
.bar-request-detail .detail-box.active{
  background: #F39800;
  border: none;
  color: #fff;
}
.bar-request-detail .detail-box.none{
  border: none;
  width: 300rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.bar-request-detail .detail-box.height-box{
  display: flex;
  border: none;
  margin-right: 0;
}
.bar-request-detail .detail-box.height-box .lower{
  display: flex;
  align-items: center;
}
.bar-request-detail .detail-box.height-box .lower .cm{
  margin-left: 10rpx;
}
.bar-request-detail .detail-box.height-box .lower .qujian{
  margin-right: 10rpx;
}
.bar-request-detail .detail-box.height-box .lower text{
  font-size: 24rpx;
  color: #868686
}
.bar-request-detail .detail-box.height-box .lower input{
  width:137rpx;
  height:39rpx;
  background:rgba(235,234,253,1);
  font-size: 22rpx;
  color: #353535;
  line-height: 39rpx;
}
.request-btn{
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 84rpx;
  width: 100%;
  display: flex;
  z-index: 20;
}
.request-btn navigator{
  width: 375rpx;
}
.request-btn-left,
.request-btn-right{
  width: 375rpx;
  height: 100%;
  text-align: center;
  line-height: 84rpx;
  color: #fff;
  font-size: 26rpx;
}
.request-btn-left{
  background: rgba(243,152,0,0.6);
}
.request-btn-right{
  background: #F39800;
}
.detail-box-checksex{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.detail-box-checksex image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}
.detail-box-checksex text{
  font-size: 30rpx;
  color: #353535;
}
.detail-box-checksex text.active{
  color: #F39800;
}