/* page/job/newwork/jobdetails/jobdetails.wxss */
page{
  background: #F5F5F5;
  width: 100%;
  height: 100%
}


/*顶部区域  */
.tit{
  /* height: 374rpx; */
  width: 100%;
  background: #fff; 
  padding: 28rpx 22rpx 0 26rpx;
  box-sizing: border-box;
  margin-bottom: 11rpx;
}
.tit-name{
  width: 100%;
  margin-bottom: 38rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end
}
.work-name{
  font-size: 32rpx;
  color: #353535;
  font-weight: bold
}
.work-price{
  font-size: 28rpx;
  color: #F39800
}

.tit-request{
  display: flex;
  align-items: flex-end;
  flex-wrap: wrap;
}
.tit-request .request-item{
  display: flex;
  align-items: flex-end;
  margin-right: 48rpx;
  margin-bottom: 5rpx;
}
.tit-request .request-item image{
  display: block;
  margin-bottom: 26rpx;
}
.tit-request .request-item .img1{
  width: 15rpx;
  height: 26rpx;
}
.tit-request .request-item .img2{
  width: 30rpx;
  height: 22rpx;
}
.tit-request .request-item .img3{
  width: 26rpx;
  height: 26rpx;
}
.tit-request .request-item .img4{
  width: 30rpx;
  height: 23rpx;
}
.tit-request .request-item .img5{
  width: 25rpx;
  height: 25rpx;
}
.tit-request .request-item .img6{
  width: 22rpx;
  height: 22rpx;
}
.tit-request .request-item text{
  font-size: 24rpx;
  margin-left: 8rpx;
  color: #353535;
  display: block;  
  line-height: 24rpx;
  height: 24rpx;
  margin-bottom: 26rpx;
}

.tit-treatment text{
  display: inline-block;
  font-size: 24rpx;
  color: #868686;
  margin-bottom: 24rpx;
}

.tit-adreess{
  height: 105rpx;
  border-top: 1rpx solid #E8E8E8;
}
.tit-adreess navigator{
  width: 100%;
  height: 100%;
  line-height: 106rpx;
}
.tit-adreess image{
  display: inline-block; 
  width: 32rpx;
  height: 40rpx;
  vertical-align: middle
}
.tit-adreess text{
  color: #868686;
  font-size: 22rpx;
  margin-left: 10rpx;  
}
/*职位描述  */
.discript{
  background: #fff;
  padding: 0 21rpx 0 26rpx;
  margin-bottom: 10rpx;
}
.dis-tit{
  height: 77rpx;
  border-bottom: 1rpx solid #E8E8E8;
  display: flex;
  align-items: center
}
.dis-tit image{
  width: 30rpx;
  height: 34rpx;
}
.dis-tit text{
  font-size: 28rpx;
  color: #353535;
  margin-left: 8rpx;
}
.dis-detail{
  margin-left: 2rpx;
}
.dis-requst{
  padding-bottom: 37rpx;
}
.duty-detail{
  color: #868686;
  font-size: 26rpx;
  display: block;
  margin-top: 28rpx;
}
.duty-tit{
  color: #353535;
  font-size: 26rpx;
  display: block;
  margin-top: 28rpx;
}
/* ------------------- */
.dis-tip{
  height: 84rpx;
  color: #F39800;
  font-size: 24rpx;
  background: #fff;
  line-height: 84rpx;
  padding-left: 27rpx;
  margin-bottom: 10rpx;
}
.to-company{
  height: 136rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 0 23rpx 0 25rpx;
}
 .to-company>view{
  display: flex;
  align-items: center
} 
.to-company image{
  width: 89rpx;
  height: 89rpx;
  /* margin-top: 24rpx; */
  display: inline-block;
  margin-right: 21rpx;
}
 .to-company .company-detail{
  display: inline-block;
} 
.to-company .company-detail text{
  display: block;
  font-size: 22rpx;
  color: #A1A1A1;
  line-height: 22rpx;
  height: 22rpx;
}
.to-company .company-detail .company-name{
  color: #353535;
  font-size: 26rpx;
  line-height: 26rpx;
  height: 26rpx;
  margin-bottom: 21rpx;
}
.to-company .next{
  width: 18rpx;
  height: 32rpx;
  margin-top: 52rpx;
}


/*底部按键footer  */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 117rpx;
  display: flex
}
.footer .footer-item{
  width: 250rpx;
  height: 100%;
  background:linear-gradient(to right,#6964FD,#3830EB);
}
.footer .footer-item.first{
  display: flex;
  justify-content: space-around;
  background: #fff
}
.footer-item-box{
  display: flex;
  flex-direction: column;
}
.footer-item-box image{
  width: 46rpx;
  height: 44rpx;
  margin-top: 21rpx;
  margin-bottom: 12rpx;
}
.footer-item-box text{
  font-size: 20rpx;
  color: #353535
}
.send{
  width: 32rpx;
  height: 33rpx;
}
.chat{
  width: 35rpx;
  height: 34rpx;
}
 .rest{
  text-align: center
} 
.rest image{
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
.rest text{
  color: #FFFFFF;
  font-size: 28rpx;
  display: inline-block;
  height: 117rpx;
  line-height: 117rpx
} 
/* 模态框 */
.modal{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  z-index: 20
}
.modal-cont{
  width: 612rpx;
  height: 320rpx;
  border-radius: 10rpx;
  margin: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.modal-cont .modal-tit{
  font-size: 30rpx;
  color: #353535;
  margin-top: 85rpx;
}
.modal-cont .modal-btn{
  display: flex;
  margin-top: 77rpx;
}
.modal-cont .modal-btn .not{
  color: #868686;
  font-size: 26rpx;
  text-decoration: underline;
  margin-left: 133rpx;
  margin-right: 52rpx;
  height: 56rpx;
  line-height: 56rpx;
}
.modal-cont .modal-btn .create{
  width: 185rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background: #F39800;
  color: #fff;
  font-size: 26rpx;
  line-height: 56rpx;
}
.send-msg{
  width: 612rpx;
  height: 174rpx;
  border-radius: 10rpx;
  background: #fff;
  margin: auto
}
.send-msg .send-intro{
  font-size: 30rpx;
  color: #353535;
  text-align: center;
  display: block;
  line-height: 174rpx;
}
.call{
  width: 612rpx;
  height: 320rpx;
  border-radius: 10rpx;
  background: #fff;
  margin: auto
}
.call .call-number{
  color: #353535;
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 81rpx;
  margin-bottom: 81rpx;
}
.call .call-btn{
  display: flex;
}
.call .call-btn>view{
  width: 185rpx;
  height: 56rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  line-height: 56rpx;
}
.call .call-btn .not{
  background:#B9B9B9 ;
  margin-left: 101rpx;
  margin-right: 41rpx;
}
.call .call-btn .call-out{
  background: #F39800
}