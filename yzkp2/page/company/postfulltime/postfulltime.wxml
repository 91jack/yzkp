<view class="post-job">
  <view class='post-job-header'>
    <view class='header-item'>
      <input placeholder='职位名称' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <input placeholder='请输入招聘人数' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <picker>
        <text>学历要求</text>
        <image src='/image/index/return.png'></image>
      </picker>
    </view>
    <view class='header-item'>
      <picker>
        <text>经验要求</text>
        <image src='/image/index/return.png'></image>        
      </picker>
    </view>
    <view class='header-item'>
      <picker>
        <text>薪资结算方式</text>
        <image src='/image/index/return.png'></image>        
      </picker>
    </view>
    <view class='header-item'>
      <picker>
        <text>薪资范围</text>
        <image src='/image/index/return.png'></image>        
      </picker>
    </view>
    <view class='header-item'>
      <picker>
        <text>身高要求</text>
        <image src='/image/index/return.png'></image>        
      </picker>
    </view>
    <view class='header-item'>
      <picker>
        <text>性别要求</text>
        <image src='/image/index/return.png'></image>        
      </picker>
    </view>
    <view class='header-item'>
      <input placeholder='招聘人姓名' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <input placeholder='招聘人联系电话' placeholder-style='color:#AEAEAE'></input>
    </view>
  </view>

  <view class='post-job-type'>
    <view class='post-job-type-item'>
      <text>职位属性:</text>
    </view>
    <view class='post-job-type-item'>
      <image src='/image/mine/checkon.png'></image>
      <text>普通职位</text>
    </view>
    <view class='post-job-type-item'>
      <image src='/image/mine/uncheck.png'></image>
      <text>招聘外包</text>
    </view>
    <view class='post-job-type-item'>
      <image src='/image/mine/uncheck.png'></image>
      <text>劳务派遣</text>
    </view>
  </view>

  <view class='post-job-wealf'>
    <view class='post-job-wealf-tit'>福利待遇:</view>
    <view class='post-job-wealf-cont'>
      <view class='post-job-wealf-item'>
        <checkbox>五险一金</checkbox>
        <checkbox>住房补贴</checkbox>
        <checkbox>交通补贴</checkbox>
        <checkbox>午餐补贴</checkbox>
      </view>
      <view class='post-job-wealf-item'>
        <checkbox>带薪休假</checkbox>
        <checkbox>节日补贴</checkbox>
        <checkbox>五险一金</checkbox>
        <checkbox>五险一金</checkbox>
      </view>
    </view>
  </view>

  <view class='post-job-area'>
    <view class='choose-place'>
      <text>请选择工作地点:</text>
      <view class='choose-region'>
        <view class='choose-region-item'>
          <text>省</text>
          <image src='/image/index/return.png'></image>
        </view>
        <view class='choose-region-item'>
          <text>市</text>
          <image src='/image/index/return.png'></image>
        </view>
        <view class='choose-region-item'>
          <text>区</text>
          <image src='/image/index/return.png'></image>
        </view>
      </view>
    </view>
  </view>
  <view class='detail-place'>
    <input placeholder-style='color:#AEAEAE' placeholder='请输入详细地址'></input>
  </view>
  <view class='choose-place'>
    <text>职位描述:</text>
    <textarea placeholder='请输入岗位职责:' placeholder-style='color:#AEAEAE'></textarea>
    <textarea placeholder='请输入职位要求:' placeholder-style='color:#AEAEAE'></textarea>
  </view>
</view>

<view class='post-job-btn'></view>
<view class='btn'>立即发布</view>

