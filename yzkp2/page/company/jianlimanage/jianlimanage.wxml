        <text class='manage-intro-item-info-job'>高级程序员 </text>
        <text>/李天</text>
      </view>
      <view class='manage-intro-item-phone' bindtap='showModal'>
        <image src='/image/mine/cellphone.png'></image>
      </view>
    </view>
    <view class='icon-content'>
      <view class='icon-cont'>
        <view class='icon-cont-item'>
          <image src='/image/index/area.png'></image>
          <text>重庆</text>
        </view>
