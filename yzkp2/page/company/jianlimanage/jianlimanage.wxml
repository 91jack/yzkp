          <text>本科</text>
        </view>
        <view class='icon-cont-item'>
          <image src='/image/index/height.png'></image>
          <text>165cm以上</text>
        </view>
      </view>
      <view class='icon-date'>1天前</view>
    </view>
    <view class='manage-intro-price'>
      <view class='manage-pricedetail'>7K-9K</view>
      <view class='manage-intro-btn'>
