/* page/my/payment/index/index.wxss */
page{
  background: #fff;
}
text{
  font-size: 28rpx;
  color: #353535;
}
.user{
  height: 285rpx;
  border-top: 11rpx solid #E8E8E8; 
  border-bottom: 11rpx solid #E8E8E8; 
  background: #fff;
  display: flex;
  padding-left: 25rpx;
}
.user .user-pic{
  width: 157rpx;
  height: 219rpx;
  border-radius: 6rpx;
  margin-top: 33rpx;
  margin-right: 20rpx;
}
.user .user-pic image{
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  background: red;
}
.user .user-detail{
  height: 100%;
  box-sizing: border-box;
  width: 550rpx;
  padding-top: 39rpx;
  padding-bottom: 33rpx;
  display: flex;
  flex-wrap: wrap;
}
.user .user-detail-idcard{
  height: 28rpx;
  line-height: 28rpx;
}
.user .user-detail-item-left{
  width: 350rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin-right: 20rpx;
}
.user .user-detail-item-right{
  width: 170rpx;
  height: 28rpx;
  line-height: 28rpx;
}
.user-detail-item-tit{
  font-size: 28rpx;
  color: #6B6B6B
}
.payment {
  background: #fff
}
.payment .payment-tit{
  height: 105rpx;
  position: relative;
}
.payment .payment-tit image{
  position: absolute;
  width: 9rpx;
  height: 29rpx;
  background: #F39800;
  left: 27rpx;
  top: 50%;
  margin-top: -15rpx;
}
.payment .payment-tit text{
  color: #353535;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 105rpx;
  margin-left: 44rpx;
}
.payment-date{
  height: 75rpx;
  display: flex;
  border-top: 1px solid #E8E8E8;
  border-bottom: 1px solid #E8E8E8;
}
.payment-date .payment-date-item{
  width: 249rpx;
  color: #868686;
  font-size: 28rpx;  
  border-right: 1rpx solid #E8E8E8;
  line-height: 75rpx;
  text-align: center;
}
.payment-date .payment-date-item.active{
  background: #F39800;
  color: #fff;  
}
.payment-date .payment-date-item:last-of-type{
  border: none;
}
.payment-cont{
  background: #fff;
  padding-top: 21rpx;
}
.payment-cont .payment-cont-item{
  width: 680rpx;
  height: 199rpx;
  border: 11rpx solid rgba(56,48,235,0.05);
  margin: auto;
}
.payment-cont .payment-cont-item .item-top{
  display: flex;
  border-top: 1rpx solid #EEEEEE;
}
.payment-cont .payment-cont-item .item-top .item-top-item{
  width: 135rpx;
  height: 119rpx;
  border-right: 1rpx solid #EEEEEE;
  border-bottom: 1rpx solid #EEEEEE;
  display: flex;
  flex-direction: column
}
.payment-cont .payment-cont-item .item-top .item-top-item:last-of-type{
  border-right:none;
}
.payment-cont .payment-cont-item .item-top .item-top-item text{
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #353535;
  margin-top: 19rpx;
  height: 24rpx;
  line-height: 24rpx;
}
.payment-cont .payment-cont-item .item-top .item-top-item .item-top-item-tit{
  margin-top: 31rpx;
  color: #6B6B6B;
}
.item-footer{
  display: flex;
}
.item-footer .item-footer-item{
  width: 250rpx;
  box-sizing: border-box;
  border-right: 1rpx solid #eee;
  height: 78rpx;
  line-height: 78rpx;
  color: #353535;
  font-size: 26rpx;
  text-align: center;
}
.item-footer .item-footer-item:last-of-type{
  border-right: none;
  background: #F39800;
  color: #fff;
}
.item-footer .item-footer-item:last-of-type.active{
  background: #AFAFAF
}