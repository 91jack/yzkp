/* pages/index/parttime/parttime.wxss */

/*
    顶部区域
*/
page{
  background: #F5F5F5;
  overflow: hidden
}
.top{
  height: 158rpx;
  background: #FFF;
  display: flex;
  box-sizing: border-box;
  padding-top: 47rpx;
  justify-content: space-around
}

/*输入框 */
.serach{
  height: 78rpx;
  width: 606rpx;
  background: #F6F6F6;
  border-radius: 10rpx;
  display: flex;
  line-height: 78rpx;
  justify-content: space-around
}
.serach .company{
  width: 96rpx;
  font-size: 28rpx;
  color: #3830EB;
  position: relative
}
.serach .company image{
  width: 28rpx;
  height: 17rpx;
  margin-top: 30rpx;
  margin-left: 10rpx;
}
.serach .inp{
  width: 60%;
}
.serach view input{
  display: block;
  font-size: 28rpx;
  line-height: 78rpx;
  text-align: center;
  height: 78rpx;
}
::-moz-placeholder{
  color: #D7D7D7;
}
::-webkit-input-placeholder{
  color: #D7D7D7;  
}
serach-icon{
  width: 32rpx;
  height: 32rpx;
}
.serach-icon image{
  width: 32rpx;
  height: 32rpx;
}

/*selsect下拉框  */
.select_img_rotate{
  transform:rotate(180deg); 
}
.select_font_yellow{
   color: #F39800; 
}
.option_box{
  position: absolute;
  top: 128rpx;
  left: 55rpx;
  width: 109rpx;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;    
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  text-align: center;
  border-radius: 4rpx;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  padding: 10rpx;
  height: 40rpx;
  color: #868686;
  border-radius: 4rpx;
}
.option:hover{
  color: #000000
}
.option:last-child{
  padding-bottom: 10rpx;
}
.jiao-cont{
  height: 16rpx;
  width: 100%;
  background: #3830EB;
  position: relative
}
.jiao{
  width: 20rpx;
  height: 20rpx;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
  background: #fff;
  position: absolute;
  top: 8rpx;
  left: 10rpx;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

/*招聘按钮*/
.top .mine{
  height: 78rpx;
  font-size: 28rpx;
  color: #3830EB;
  line-height: 78rpx;
}

.find{
  font-size: 20rpx;
  color: #fff;
  line-height: 20rpx;
  display: block;
  margin-top: 8rpx;
}




/*select-bar下拉框*/


/*nav-bar*/
.nav-bar{
  height: 84rpx;
  line-height: 84rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #F5F5F5;
  background: #fff;
  position: relative
}
.nav-bar .nav-item{
  display: flex;
  width: 185rpx;
  position: relative
}
.nav-bar .nav-item::after{
  content: '';
  position: absolute;
  top: 50%;
  right: 0;
  height: 26rpx;
  width: 1px;
  background: #BFBFBF;
  margin-top: -13rpx;
}
.nav-bar .nav-item:last-of-type::after{
  width: 0
}
.nav-bar .nav-item text{
  font-size: 28rpx;
  color: #6B6B6B;
  display: block;
  margin-left: 45rpx;
}
.nav-bar .nav-item image{
  width: 21rpx;
  height: 13rpx;
  display: block;
  margin-top: 38rpx;
  margin-left: 11rpx;
}

/*bar内容展示区*/
.bar{
  position: absolute;
  top: 85rpx;
  left: 0;
  background: rgba(0, 0, 0, 0.2);
  border-top:1rpx solid #6B6B6B
}
.bar>view{
  height: 980rpx;
  width: 750rpx;
}
.bar>view .bar-cont{
  height: 224rpx;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column
}
.bar>view .cover{
  height: 100%;
  width: 100%;
}


/*cont职位展示区*/
.cont .cont-item{
  height: 237rpx;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1px solid #F5F5F5;
  padding-top: 27rpx;
}
.cont .cont-item .cont-tit{
  display: flex;
  justify-content: space-between;
}
.cont .cont-item .cont-tit .title{
  font-size: 32rpx;
  color: #353535;
  font-weight: bold;
  margin-left: 22rpx;
}
.cont .cont-item .cont-tit .time{
  font-size: 24rpx;
  margin-right: 23rpx;
  color: #A0A0A0
}
.cont .cont-detail{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 16rpx;
}
.cont .cont-detail .det-left{
  display: flex;
  height: 28rpx;
}
.cont .cont-detail .det-left .left-item{
  display: flex;
  align-items: flex-end;
  height: 28rpx;
  margin-left: 15rpx;
}
.cont .cont-detail .det-left .left-item:first-of-type{
  margin-left: 19rpx;
}
.cont .cont-detail .det-left .left-item image{
  width: 30rpx;
  height: 28rpx;
  display: block
}
.cont .cont-detail .det-left .left-item text{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #868686;
  margin-left: 5rpx;
  display: block;
  height: 24rpx;
}
.cont .cont-detail .det-right{
  color: #F39800;
  font-size: 28rpx;
  margin-right: 21rpx;
  height: 28rpx;
  line-height: 28rpx;
}
.cont .cont-company{
  height: 66rpx;
  display: flex;
  margin-top: 34rpx;
}
.cont .cont-company image{
  width: 66rpx;
  height: 66rpx;
  margin-left: 18rpx;
}
.cont .cont-company .company-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 16rpx;
}
.cont .cont-company .company-info .company-name{
  font-size: 26rpx;
  color: #595959
}
.cont .cont-company .company-info .company-detail{
  font-size: 24rpx;
  color: #A1A1A1
}