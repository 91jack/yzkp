<view class="post-job">
  <view class='tip'>
    <view></view>
    <text>个人信息</text>
  </view>
  <view class='post-job-header'>
    <view class='header-item'>
      <input placeholder='请输入姓名' value='小张' bindinput='getValue' data-inx="0" placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <picker bindchange="bindPickerChange" data-idx="0" value="{{sexIndex}}" range="{{pickerSel}}">
        <text hidden='{{sexHide}}'>请选择性别</text>
        <text hidden='{{!sexHide}}'>{{pickerSel[sexIndex]}}</text>
        <image src='/image/index/return.png'></image>
      </picker>
    </view>
    <view class='header-item'>
      <input placeholder='请输入身份证号码' bindinput='getValue' data-inx="1" maxlength='18' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <picker bindchange="bindPickerChange" data-idx="1" value="{{educationIndex}}" range='{{educationSel}}'>
        <text hidden='{{educationHide}}'>请选择学历</text>
        <text hidden='{{!educationHide}}'>{{educationSel[educationIndex]}}</text>
        <image src='/image/index/return.png'></image>
      </picker>
    </view>
    <view class='header-item'>
      <input placeholder='请输入联系电话' value='18500000000' bindinput='getValue' data-inx="2" maxlength='11' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <input placeholder='请输入紧急联系电话' bindinput='getValue' data-inx="3" maxlength='11' placeholder-style='color:#AEAEAE'></input>
    </view>
  </view>

