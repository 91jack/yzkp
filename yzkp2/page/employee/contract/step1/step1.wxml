<view class="post-job">
  <view class='tip'>
    <view></view>
    <text>个人信息</text>
  </view>
  <view class='post-job-header'>
    <view class='header-item'>
      <input placeholder='请输入姓名' bindinput='getName' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <picker bindchange="bindPickerChange" data-idx="0" value="{{sexIndex}}" range="{{pickerSel}}">
        <text hidden='{{sexHide}}'>请选择性别</text>
        <text hidden='{{!sexHide}}'>{{pickerSel[sexIndex]}}</text>
        <image src='/image/index/return.png'></image>
      </picker>
    </view>
    <view class='header-item'>
      <input placeholder='请输入身份证号码'bindinput='getIdnum' maxlength='18' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <picker bindchange="bindPickerChange" data-idx="1" value="{{workYearIndex}}" range='{{workYearSel}}'>
        <text hidden='{{workYearHide}}'>请选择学历</text>
        <text hidden='{{!workYearHide}}'>{{workYearSel[workYearIndex]}}</text>
        <image src='/image/index/return.png'></image>
      </picker>
    </view>
    <view class='header-item'>
      <input placeholder='请输入联系电话' maxlength='11' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <input placeholder='请输入紧急联系电话' maxlength='11' placeholder-style='color:#AEAEAE'></input>
    </view>
  </view>

  <view class='post-job-area'>
    <view class='choose-place'>
      <text>请选择现住地址:</text>
      <view class='choose-region'>
        <view class='choose-region-item'>
          <picker>
            <text>省</text>
            <image src='/image/index/return.png'></image>
          </picker>
        </view>
        <view class='choose-region-item'>
          <picker>
            <text>市</text>
            <image src='/image/index/return.png'></image>
          </picker>
        </view>
        <view class='choose-region-item'>
          <picker>
            <text>区</text>
            <image src='/image/index/return.png'></image>
          </picker>
        </view>
      </view>
    </view>
  </view>
  <view class='detail-place'>
    <input placeholder-style='color:#AEAEAE' placeholder='请输入详细地址'></input>
  </view>
</view>

<view class="post-job active">
  <view class='tip'>
    <view></view>
    <text>个人信息</text>
  </view>
  <view class='post-job-header'>
    <view class='header-item'>
      <input placeholder='请输入所属部门' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <input placeholder='请输入担任职位' placeholder-style='color:#AEAEAE'></input>
    </view>
    <view class='header-item'>
      <input placeholder='请输入入职时间' placeholder-style='color:#AEAEAE'></input>
    </view>
  </view>
</view>


<view class='btn' bindtap='submitBtn'>下一步</view>



