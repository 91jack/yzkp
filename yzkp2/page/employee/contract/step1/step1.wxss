page{
  background: #fff;
}
.post-job{
  border-bottom: 15rpx solid #e8e8e8;
}

.tip{
  height: 28rpx;
  margin-bottom: 34rpx;
  display: flex;
}
.tip>view{
  display: inline-block;
  height: 28rpx;
  width: 8rpx;
  background: #F39800;
  margin-right: 8rpx;
}
.tip text{
  display: inline-block;
  height: 28rpx;
  line-height: 28rpx;
  color: #353535;
  font-size: 28rpx;
  font-weight: bold;
}
.post-job-header{
  height: 256rpx;
}
.post-job.active{
  border-bottom: none;
}
.post-job.active .post-job-header{
  height: 170rpx;
}
.be-employees{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center;
}
.be-employees .be-employees-cont{
  width:612rpx;
  height:350rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.be-employees-cont-pic{
  width: 73rpx;
  height: 73rpx;
}
.be-employees-cont-info{
  width: 350rpx;
  font-size: 30rpx;
  color: #353535;
  margin-top: 27rpx;
  text-align: center;
}
.be-employees-cont-btn{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 39rpx;
}
.be-employees-cont-btn-item{
  height:56rpx;
  border-radius:28rpx;
  font-size: 26rpx;
  color: #868686;
  text-decoration: underline;
  text-align: center;
  line-height: 56rpx;
}
.be-employees-cont-btn-item.active{
  background:rgba(243,152,0,1);
  color: #fff;
  text-decoration: none;
  margin-left: 51rpx;
  width:176rpx;
}
.detail-place input{
  width:705rpx;
  box-sizing:border-box;
  padding:20rpx 0 20rpx 25rpx;
  line-height:80rpx;
  font-size:28rpx;
  display:block;
  height:80rpx;
  color:#6B6B6B;
}