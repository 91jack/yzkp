<!--page/common/resume/myapply/myapply.wxml-->
<view class='my-apply'>
  <view class="header">
    <navigator hover-class="none" url="/page/resume/basicmsgedit/basicmsgedit">
      <view class="header-cont">
        <view>
          <image class="company-pic" src=""></image>
        </view>
        <view class="header-intro">
          <text class="name">张澜澜(微信名)</text>
          <view class="intro-cont">
            <text class="intro detail">踏实勤奋，积极上进,热爱生活,......</text>
          </view>
        </view>
        <image class="tonext" src="/image/mine/next.png"></image>
      </view>
    </navigator>
  </view>
  <view class="manageintro-nav">
    <navigator url='/page/resume/index/index' hover-class='none'>  
      <view class="manageintro-nav-item">简历编辑</view>
    </navigator>
    <navigator url='/page/resume/resumeconfig/resumeconfig' hover-class='none'>
      <view class="manageintro-nav-item">简历设置</view>
    </navigator>
    <navigator url='/page/resume/browseme/browseme' hover-class='none'>
      <view class="manageintro-nav-item">谁看过我</view>
    </navigator>
    <view class="manageintro-nav-item active">我的申请</view>
  </view>
  <!-- ----------------我的申请 ------------ -->
  <view class="my-apply">
  <block wx:for="{{applyList}}">
    <view class="my-apply-item">
      <view class="my-apply-item-tit">
        <text class="posi-left">{{item.state_name}}</text>
        <text>{{item.createTime}}</text>
      </view>
      <view class="my-apply-item-name">
        <text>{{item.name}}</text>
        <image src="/image/mine/cellphone.png"></image>
      </view>
      <view class="my-apply-item-pay">{{item.pay}}</view>
      <view class="my-apply-item-footer">
        <text class="my-apply-item-footer-comp">{{item.companyName}}</text>
        <text class="my-apply-item-footer-comment">匿名评价</text>
      </view>
    </view>
    </block>
  </view>
</view>
