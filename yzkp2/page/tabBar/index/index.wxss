/* pages/index/index.wxss */


/*
    顶部区域
*/
page{
  background: #F5F5F5
}

::-moz-placeholder{
  color: #D7D7D7;
}
::-webkit-input-placeholder{
  color: #D7D7D7;  
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}




/*banner图*/
.banner image{
  width: 100%;
  height: 163rpx;
}

/*select-bar*/
.select-bar{
  width: 100%;
  height: 159rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 10rpx solid #F5F5F5;  
  background: #fff
}
.select-bar .item{
  margin-top: 26rpx;
}
.select-bar .item image{
  width: 70rpx;
  height: 61rpx;
  display: block;
  margin: auto
}
.select-bar .item text{
  font-size: 22rpx;
  color: #525353;
  text-align: center;
  line-height: 22rpx; 
}

/*select-bar下拉框*/


/* 简历管理 */


.jobmanage-tit{
  height: 92rpx;
  width: 100%;
  border-bottom: 10rpx solid #e8e8e8;
  display: flex;
}
.jobmanage-tit>view{
  width: 50%;
  font-size: 30rpx;
  color: #353535;
  text-align: center;
  line-height: 92rpx;
}
.jobmanage-tit>view.active{
  color: #fff;
  background: #F39800
}
.manageintro-cont .manage-intro-nav{
  height: 84rpx;
  border-bottom: 1rpx solid #E8E8E8;
  display: flex;
}
.manageintro-cont .manage-intro-nav-item{
  width: 186rpx;
  position: relative;
  height: 100%;
  text-align: center;
  line-height: 84rpx;
  color: #6B6B6B;
}
.manageintro-cont .manage-intro-nav-item:first-of-type::after,
.manageintro-cont .manage-intro-nav-item:nth-of-type(2)::after,
.manageintro-cont .manage-intro-nav-item:nth-of-type(3)::after{
  content: '';
  position: absolute;  
  width:2rpx;
  height: 26rpx;
  background: #BFBFBF;
  top: 50%;
  margin-top: -13rpx;
  right: 0;
}
.manage-intro-cont{
  padding-top: 36rpx;
}
.manage-intro-item{
  width: 702rpx;
  height: 229rpx;
  background:rgba(56,48,235,0.05);
  margin: auto;
  border-radius: 6rpx;
}
.manage-intro-item-phone image{
  width: 45rpx;
  height: 45rpx;
}