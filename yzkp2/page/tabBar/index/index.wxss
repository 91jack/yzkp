/* pages/index/index.wxss */


/*
    顶部区域
*/
page{
  background: #F5F5F5
}

::-moz-placeholder{
  color: #D7D7D7;
}
::-webkit-input-placeholder{
  color: #D7D7D7;  
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}




/*banner图*/
.banner image{
  width: 100%;
  height: 163rpx;
}

/*select-bar*/
.select-bar{
  width: 100%;
  height: 159rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 10rpx solid #F5F5F5;  
  background: #fff
}
.select-bar .item{
  margin-top: 26rpx;
}
.select-bar .item image{
  width: 70rpx;
  height: 61rpx;
  display: block;
  margin: auto
}
.select-bar .item text{
  font-size: 22rpx;
  color: #525353;
  text-align: center;
  line-height: 22rpx; 
}

/*select-bar下拉框*/


/* 简历管理 */


.jobmanage-tit{
  height: 92rpx;
  width: 100%;
  border-bottom: 10rpx solid #e8e8e8;
  display: flex;
}
.jobmanage-tit>view{
  width: 50%;
  font-size: 30rpx;
  color: #353535;
  text-align: center;
  line-height: 92rpx;
}
.jobmanage-tit>view.active{
  color: #fff;
  background: #F39800
}
.manageintro-cont .manage-intro-nav{
  height: 84rpx;
  border-bottom: 1rpx solid #E8E8E8;
  display: flex;
}
.manageintro-cont .manage-intro-nav-item{
  width: 186rpx;
  position: relative;
  height: 100%;
  text-align: center;
  line-height: 84rpx;
  color: #6B6B6B;
}
.manage-intro-cont{
  padding-top: 36rpx;
}
.manage-intro-item{
  width: 702rpx;
  height: 229rpx;
  background:rgba(56,48,235,0.05);
  margin: auto;
  border-radius: 6rpx;
}
.manage-intro-item-phone image{
  width: 45rpx;
  height: 45rpx;
}
.jianlicont.cont-detail{
  margin-top: 16rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
}
.jianlicont.cont-detail .left-item.pay{
  margin-right: 21rpx;
  height: 43rpx;
  align-items: flex-start;
}
.jianlicont.cont-detail .left-item.pay text{
  color: #F39800;
  font-size: 28rpx;
  line-height: 28rpx;
}
.get-useinfo{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.2);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-content: center;
  align-items: center;
}
.get-useinfo-cont{
  width: 500rpx;
  height: 245rpx;
  background: #fff;
  margin: auto;
  padding: 20rpx;
  border-radius: 10rpx;
}
.get-useinfo-cont-tit{
  display: block;
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.get-useinfo-cont-nei{
  display: block;
  height: 40rpx;
  width: 100%;
  font-size: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e8e8e8;
}
.get-useinfo-cont-inner{
  /* text-align: right; */
  padding: 20rpx 0;
  height: 30rpx;
  font-size: 26rpx;
  line-height: 26rpx;
}
.get-useinfo button{
  display: inline-block;
  outline: none;
  border: none;
  float: right;
}
.get-useinfo button.ok{
  color: #26A12E
}