/* pages/index/index.wxss */

/*
    顶部区域
*/
page{
  background: #F5F5F5
}

::-moz-placeholder{
  color: #D7D7D7;
}
::-webkit-input-placeholder{
  color: #D7D7D7;  
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}




/*banner图*/
.banner image{
  width: 100%;
  height: 163rpx;
}

/*select-bar*/
.select-bar{
  width: 100%;
  height: 159rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 10rpx solid #F5F5F5;  
  background: #fff
}
.select-bar .item{
  margin-top: 26rpx;
}
.select-bar .item image{
  width: 70rpx;
  height: 61rpx;
  display: block;
  margin: auto
}
.select-bar .item text{
  font-size: 22rpx;
  color: #525353;
  text-align: center;
  line-height: 22rpx; 
}

