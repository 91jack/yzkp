<!--pages/index/index.wxml-->
<import src ="/template/joblist/joblist.wxml"/>



<view class='banner'>
  <image src='/image/index/banner.png'></image>
</view>

<!-- 求职者 -->
<view class='select-bar' wx:if="{{role==1}}">
  <view class='item' wx:for="{{selectBar1}}">
    <navigator hover-class="none" url='{{item.url}}'>
      <image src='{{item.src}}'></image>
      <text>{{item.text}}</text>
    </navigator>
  </view>
</view>
<!-- 员工 -->
<view class='select-bar' wx:if="{{role==2}}">
  <view class='item' wx:for="{{selectBar2}}">
    <navigator hover-class="none" url='{{item.url}}'>
      <image src='{{item.src}}'></image>
      <text>{{item.text}}</text>
    </navigator>
  </view>
</view>
<!-- 企业 -->
<view class='select-bar' wx:if="{{role==3}}">
  <view class='item' wx:for="{{selectBar3}}">
    <navigator hover-class="none" url='{{item.url}}'>
      <image src='{{item.src}}'></image>
      <text>{{item.text}}</text>
    </navigator>
  </view>
</view>


<view>
  <jz-select-navbar>
    <view slot="nav"></view>
  </jz-select-navbar>
</view>



<!--职位展示  -->
<view class='cont'>
  <template is="joblist" data="{{jobList}}"/>
</view>


<!-- 简历管理 -->
<view class='jobmanage-tit'>
  <view class='intro-manage active'>简历管理</view>
  <view class='job-manage'>职位管理</view>
</view>
<view class='manage-intro-nav'>
  <view class='manage-intro-nav-item'>邀请面试</view>
  <view class='manage-intro-nav-item'>暂未接通</view>
  <view class='manage-intro-nav-item'>待定</view>
  <view class='manage-intro-nav-item'>不合适</view>
</view>

<view class='manageintro-cont'>
  <view class='manage-intro-cont'>
    <view class='manage-intro-item'>
      <view class='manage-intro-item-info'>
        <text class='manage-intro-item-info-job'>高级程序员 </text>
        <text>/李天</text>
      </view>
      <view class='manage-intro-item-phone'>
        <image src='/image/mine/cellphone.png'></image>
      </view>
    </view>
  </view>
</view>